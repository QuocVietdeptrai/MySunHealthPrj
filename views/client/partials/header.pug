  // Main Header
  .header
    .logo
      a(href="/")
        img(
          alt="MySunHealth Logo" 
          src="/client/assets/images/logo.png"
        )
    .search-bar
      input(
        placeholder="Bạn đang tìm gì hôm nay..." 
        type="text"
      )
      button(onclick="window.location.href='/tim-kiem'") Tìm kiếm
    .header-right
      a.icon-badge(href="/notifications")
        i.fa-solid.fa-bell
        span.badge 3
      a.icon-badge(href="/cart")
        i.fa-solid.fa-cart-shopping
        span.badge 5

      //- Nếu đã đăng nhập thì hiển thị avatar
      if account
        .user-menu
          img.avatar(src=account.avatar || '/client/assets/images/default-avatar.png', alt="Avatar")
          ul.dropdown-menu
            li
              a(href="/profile/edit")
                i.fa-solid.fa-user
                span Thông tin cá nhân
            li
              a(href="/account/search_order")
                i.fa-solid.fa-receipt
                span Danh sách đơn hàng

            li.menu-divider

            li
              a.logout(href="/")
                i.fa-solid.fa-right-from-bracket
                span Đăng xuất
      else
        a(href="/account/login")
          button Đăng nhập / Đăng ký


  // Navigation Menu
