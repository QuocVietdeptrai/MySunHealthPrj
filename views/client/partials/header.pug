  .top-banner
    .promo
      img(
        alt="MySunHealth Promotion Banner" 
        src="/client/assets/images/top_banner.png"
      )

  // Top Navigation
  .top-nav
    a(href="tel:18006821")
      span Hotline: 1800 6821
    a(href="/doanh-nghiep")
