header.header
  .inner-logo
    a(href=`/${pathAdmin}/dashboard`)
      span MySunHealth
      span Admin
  .inner-wrap
    .inner-notify
      a(href=`/${pathAdmin}/order/list`, style="position: relative; display: inline-block;")
        img(src="/admin/assets/images/icon-bell.svg", alt="")
        if countInitialOrders > 0
          span.badge-notify= countInitialOrders
        else
          span.badge-notify 0
    .inner-account
      .inner-avatar
        img(src=(account.avatar || ""), alt="")
      .inner-text
        .inner-name #{account.fullName}
        .inner-role #{account.nameRole}
    button.inner-button-menu
      <i class="fa-solid fa-bars"></i>